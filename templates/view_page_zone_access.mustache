								</form>
								</div>
							{{/ useattendance}}
						{{/isfinished}}
					{{/hascreatecapability}}
				{{#hascreatecapability}}
					{{^isfinished}}
						</div>
						<div class="d-flex">
						<form action="./loadmeeting.php" id="finishsession" target="{{target}}" onsubmit="{{onsubmit}}">
