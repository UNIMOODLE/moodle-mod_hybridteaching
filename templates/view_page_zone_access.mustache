									</form>
									{{/ rotateqr}}{{/ useqr}}
								{{/ usepassword}}
							{{/ useattendance}}
						{{/isfinished}}
					{{/hascreatecapability}}
					{{^hascreatecapability}}
						{{^isfinished}}
							{{#hasjoinurlcapability}}
								{{#hasvc}}
									<form action="./loadmeeting.php" target="_blank" id="joinvc">
										<input type="hidden" name="id" value="{{id}}">
										<input type="hidden" name="s" value="{{s}}">
										<input type="hidden" name="url" value="{{url}}">
